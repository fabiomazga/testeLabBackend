<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>TestLabBackend</display-name>

    <!-- Configuração do Servlet -->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.testlab.servlets.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!-- Configuração de outro Servlet de exemplo -->
    <servlet>
        <servlet-name>ExampleServlet</servlet-name>
        <servlet-class>com.testlab.servlets.ExampleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExampleServlet</servlet-name>
        <url-pattern>/example</url-pattern>
    </servlet-mapping>

    <!-- Arquivo de boas-vindas -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Parâmetros de contexto -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <!-- Filtros opcionais (se necessário) -->
    <!-- 
    <filter>
        <filter-name>ExampleFilter</filter-name>
        <filter-class>com.testlab.filters.ExampleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ExampleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->

</web-app>
